#include <stdio.h>
typedef struct {
    char CIN [10];
    char Nom[10] ;
    char Prenom[10] ;
    int Montant ;
} Compte ;

void Introduire_compte(){
    Compte seule;
    printf("taper votre cin :");
    scanf("%s",seule.CIN);
    printf("taper votre nom :");
    scanf("%s",seule.Nom);
    printf("taper votre prenom :");
    scanf("%s",seule.Prenom);
    printf("taper votre montant :");
    scanf("%d",&seule.Montant);
    printf("CIN: %s  Nom: %s Prenom: %s Montant: %d DH",seule.CIN,seule.Nom,seule.Prenom,seule.Montant);
}
void plusieurs_compte (){
    int n,i ;
    printf("entrer le nombre de compte que vous voulez creer :");
    scanf("%d",&n);
    Compte clients[n];
    for(i=0;i<n;i++){
        
        printf("\ntaper votre cin :");
        scanf("%s",clients[i].CIN);
        printf("\ntaper votre nom :");
        scanf("%s",clients[i].Nom);
        printf("\ntaper votre prenom :");
        scanf("%s",clients[i].Prenom);
        printf("\ntaper votre montant :");
        scanf("%d",&clients[i].Montant);
    
    }
    for(i=0;i<n;i++)
           printf("\n CIN: %s  Nom: %s Prenom: %s Montant: %d DH",clients[i].CIN,clients[i].Nom,clients[i].Prenom,clients[i].Montant);
}
void operations (){
int choix;
            printf("1 : Retrait\n");
            printf("2 : Dépôt");
            printf("\n entrer votre choix :");
            scanf("%c",&choix);    
    switch(choix){
        case 1 :
         printf("%d" ,choix);
        break;
        case 2 : 
         printf("%d" ,choix);
        break;
        default : ;
        break;
       }
}
int main()
{
    char c ;
printf(">>>>>>>>>>>>>>  Gestion Bancaire  <<<<<<<<<<<<<<<");
printf("\n A : Introduire un compte bancaire") ;
printf("\n B : Introduire plusieurs comptes bancaires") ;
printf("\n C : Opérations (Retrait ,Dépôt)") ;
printf("\n D : Affichage") ;
printf("\n E : Fidélisation") ;
printf("\n F : Quitter ") ;

printf("\n Entrer un caractère :") ;
scanf("%c",&c);
switch (c) {
case 'A' : Introduire_compte() ;
break;
case 'a' : Introduire_compte() ;
break;
case 'B' : plusieurs_compte () ;
break;
case 'b' : plusieurs_compte ();
break;
case 'C' : operations () ;
break;
case 'c' : operations () ;
break;
case 'D' : ;
break;
case 'd' : ;
break;
case 'E' : ;
break;
case 'e' : ;
break;
case 'F' : ;
break;
case 'f' : ;
break;
default : ;
break;
}
    return 0;
}
